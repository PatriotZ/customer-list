<%- include("_header") -%>

<h1>Customer Export</h1> 
<hr/>
<p>Total number of records in the database: <%= totalRows %></p>
    <form action="/export" method="post">
        <div class="form-group row">
          <label for="" class="col-sm-12 col-form-label">Enter a file name and click "Export Customers".</label>          
        </div>
        <div class="form-group row">
            <label for="fileName" class="col-sm-2 col-form-label">File Name:</label>  
            <div class="col-sm-4">
              <input type="text" class="form-control" id="fileName" name="fileName" required> 
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label"></label>
              <div class="col-sm-4">
                <button type="submit" class="btn btn-primary">Export Customers</button>
              </div>
            </div>
      </form>
      <% if (message !== "") { %>
          <h6> <%= message %></h6>
      <% } %>

<%- include("_footer") -%>