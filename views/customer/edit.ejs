<%- include("../_header") -%>

<h1>Edit Customer</h1> 
 <hr/>
<% if (model.length > 0 ) { %> 

    <form method="post" action="/customer/edit/<%= model[0].cusid %>">
        <div class="form-group row">
          <label for="cusid" class="col-sm-2 col-form-label">ID:</label>
          <div class="col-sm-4">
            <input type="number" class="form-control" id="cusid" name="cusid" placeholder="Customer ID"  value="<%= model[0].cusid %>" required> 
          </div>
          <label class="col-sm-3 col-form-label">(Required)</label>
        </div>
        <div class="form-group row">
          <label for="cusfname" class="col-sm-2 col-form-label">First Name</label>
          <div class="col-sm-4">
            <input type="text" class="form-control" id="cusfname" name="cusfname"  pattern="[A-Za-z]{0,}" placeholder="First Name"  value="<%= model[0].cusfname %>" required> 
          </div>
          <label class="col-sm-3 col-form-label">(Required)</label>
        </div>
        <div class="form-group row">
            <label for="cuslname" class="col-sm-2 col-form-label">Last Name</label>
            <div class="col-sm-4">
              <input type="text" class="form-control" id="cuslname" name="cuslname"  pattern="[A-Za-z]{0,}" placeholder="Last Name"  value="<%= model[0].cuslname %>" required> 
            </div>
            <label class="col-sm-3 col-form-label">(Required)</label>
        </div>
        <div class="form-group row">
            <label for="cusstate" class="col-sm-2 col-form-label">State</label>
            <div class="col-sm-4">
              <input type="text" class="form-control" id="cusstate" name="cusstate" maxlength="2" pattern="[A-Za-z]{0,2}" placeholder="State"  value="<%= model[0].cusstate %>">               
            </div>
            <label class="col-sm-3 col-form-label">
        </div>
        <div class="form-group row">
            <label for="cussalesytd" class="col-sm-2 col-form-label">Sales YTD</label>
            <div class="col-sm-4">
              <input type="number" step="any" class="form-control" id="cussalesytd" name="cussalesytd" placeholder="Sales YTD"  value="<%= Number(model[0].cussalesytd.replace(/[^0-9.-]+/g,"")) %>"> 
            </div>
        </div>
        <div class="form-group row">
            <label for="cussalesprev" class="col-sm-2 col-form-label">Previous Years Sales</label>
            <div class="col-sm-4">
              <input type="number" step="any" class="form-control" id="cussalesprev" name="cussalesprev" placeholder="Previous Years Sales"  value="<%= Number(model[0].cussalesprev.replace(/[^0-9.-]+/g,"")) %>">               
            </div>
        </div>        
        <div class="form-group row">
        <label class="col-sm-2 col-form-label"></label>
          <div class="col-sm-4">
            <button type="submit" class="btn btn-warning">Update Customer</button>
            <button type="reset" class="btn btn-primary">Reset</button>
          </div>
        </div>
      </form>
      <% if (message !== "") { %>
          <h6> <%= message %></h6>
          <% if (errorMessage !== "") { %>
            <p><%= errorMessage %></p>
        <% } %>
      <% } %>
<% } else { %>
    <p>No customer found with the given ID.</p>
<% } %>
<%- include("../_footer") -%>